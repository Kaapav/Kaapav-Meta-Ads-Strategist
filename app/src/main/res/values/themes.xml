<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Kaapav" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/kaapav_gold</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/kaapav_gold_dark</item>
        <item name="android:windowBackground">@color/kaapav_bg</item>
        <item name="android:textColor">@color/kaapav_text</item>
        <item name="materialCardViewStyle">@style/KaapavCard</item>
    </style>

    <style name="KaapavCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:cardBackgroundColor">@color/card_bg</item>
    </style>
</resources>

