# AI provider: 'openai' | 'noop'
AI_PROVIDER=noop

# Optional: OpenAI API (set if AI_PROVIDER=openai)
OPENAI_API_KEY=

# Upstash Redis REST
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Firebase service account: base64 of JSON or file path
FIREBASE_SERVICE_ACCOUNT_BASE64=
# or
FIREBASE_SERVICE_ACCOUNT_FILE=./server/keys/firebase-sa.json

# Meta config (if you want to integrate later)
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=

PORT=3001


# WhatsApp / Meta Cloud
WHATSAPP_TOKEN=<Meta_Cloud_access_token_for_WHATSAPP>
WHATSAPP_PHONE_ID=<whatsapp_phone_number_id>   # numeric id for your business phone
WHATSAPP_VERIFY_TOKEN=<choose-a-random-string-for-verify>

# n8n
N8N_WEBHOOK_URL=https://<your-n8n-host>/webhook/whatsapp-leads  # optional if you want server to forward

# Notification / app
ADMIN_WHATSAPP_NUMBER=919XXXXXXXXX   # your admin/ops number for alerts (optional)
N8N_BASIC_AUTH_USER=...
N8N_BASIC_AUTH_PASS=...

